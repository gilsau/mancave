<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Mancave - @ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/styles.css" rel="stylesheet" type="text/css" />
    @RenderSection("Scripts", false)
</head>
<body>

    <div id="mainContainer" class="container-fluid">

        @Html.Partial("Header")

        <div class="row row-offcanvas row-offcanvas-left" style="margin:0px;padding:0px;vertical-align:top;">

            <div class="row-offcanvas row-offcanvas-right" style="margin:0px;padding:0px;vertical-align:top;">
                @Html.Partial("LeftPanel")
            
                <div class="col-xs-12 col-sm-8" style="margin:0px;padding:0px;vertical-align:top;">
                    <div id="mainBody" class="jumbotron" style="margin:0px;padding:0px;vertical-align:top;">
                        @RenderBody()
                    </div>
                </div>
    
                @Html.Partial("RightPanel")
          
            </div>

        </div>
        
        <hr style="margin:0px;padding:0px;" />
        
        <footer>
            @Html.Partial("Footer")
        </footer>
 
    </div>

    <div class="modal fade" id="contact" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <form class="form-horizontal">
                    <div class="modal-header">
                        <p>Refer A Professional</p>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="contact-email" class="col-lg-2 control-label">Email</label>
                            <div class="col-lg-10">
                                <input type="text" class="form-control" id="email" placeholder="you@example.com" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="contact-phone" class="col-lg-2 control-label">Phone</label>
                            <div class="col-lg-10">
                                <input type="text" class="form-control" id="phone" placeholder="###-###-####" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a href="#" class="btn btn-default" data-dismiss="modal">Close</a>
                        <button class="btn btn-primary" type="submit">Send</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js" ></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <script>

        //Left Menu
        $('[data-toggle=offcanvas]').click(function () {
            $('.row-offcanvas-left').toggleClass('active');
        });

        //Right Menu
        $('[data-toggle=offcanvasright]').click(function () {
            $('.row-offcanvas-right').toggleClass('active');
        });

    </script>
</body>
</html>