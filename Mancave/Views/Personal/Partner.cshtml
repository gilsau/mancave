@using Mancave.MancaveServices
@{
    ViewBag.Title = "My Wife's Page";

    Account acctCurrent = (Account)Session["User"];
}

@section Scripts{
    <script src="~/scripts/partner.js" type="text/javascript"></script>
}

<div class="sectionTitle">@ViewBag.Title</div>

<div class="panel panel-default">
    <div class="panel-body">
        <form method="post" >
            <label style="font-size:16px;" for="Url">Wife's Url</label>
            <input class="form-control" type="text" name="Url" value="@acctCurrent.WifesPageUrl" placeholder="Example: http://www.MyWifesWebsite.com" />
            <button style="margin:10px;" class="pull-right btn btn-md btn-primary">Save</button>
        </form>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-body">

        @if(!string.IsNullOrEmpty(acctCurrent.WifesPageUrl)){
           <iframe id="frameWifePage" style="width:100%;height:0px;" src="@acctCurrent.WifesPageUrl.ToLower().Replace("http:", "")"></iframe>
        }
        
    </div>
</div>